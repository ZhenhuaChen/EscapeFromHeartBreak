/**app.wxss**/
page {
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

button {
  font-family: inherit;
}

/* 全局配色变量 */
:root {
  --primary-pink: #ff9dcd;
  --primary-blue: #81d4fa;
  --light-pink: #ffeef8;
  --light-blue: #e0f7ff;
  --gradient-pink: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  --gradient-blue: linear-gradient(135deg, #81d4fa 0%, #4fc3f7 100%);
  --gradient-mixed: linear-gradient(135deg, #ff9dcd 0%, #81d4fa 100%);
}

/* 安全区域 */
.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
} 
