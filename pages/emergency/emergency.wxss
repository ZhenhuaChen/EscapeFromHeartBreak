/* pages/emergency/emergency.wxss */
page {
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  min-height: 100vh;
}

.container {
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.tools-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tool-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tool-header {
  display: flex;
  align-items: center;
  flex: 1;
}

.tool-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
}

.tool-title-wrap {
  display: flex;
  flex-direction: column;
}

.tool-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #999;
}

.tool-btn {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 157, 205, 0.3);
}

/* 呼吸练习弹窗 */
.breathing-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
  z-index: 1000;
}

.breathing-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.breathing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
}

.breathing-circle {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff9dcd 0%, #81d4fa 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  transition: transform 4s ease-in-out;
  box-shadow: 0 0 40rpx rgba(255, 157, 205, 0.5);
}

.breathing-circle.inhale {
  transform: scale(1.2);
}

.breathing-circle.hold {
  transform: scale(1.2);
}

.breathing-circle.exhale {
  transform: scale(0.8);
}

.breathing-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
}

.breathing-tip {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.close-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: 2rpx solid #fff;
}
