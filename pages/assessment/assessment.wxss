/* pages/assessment/assessment.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 80rpx 40rpx 40rpx;
  background: #fff;
}

.step {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.questions {
  flex: 1;
  padding: 40rpx;
}

.question-item {
  margin-bottom: 60rpx;
}

.question-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option {
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
}

.option.active {
  background: #667eea;
  color: #fff;
  border-color: #667eea;
}

.footer {
  padding: 40rpx;
  background: #fff;
}

.submit-btn {
  width: 100%;
  background: #667eea;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 30rpx;
  border: none;
}

.submit-btn.disabled {
  background: #ccc;
  color: #999;
}
