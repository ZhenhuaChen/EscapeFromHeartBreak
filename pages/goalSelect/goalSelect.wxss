/* pages/goalSelect/goalSelect.wxss */
page {
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  min-height: 100vh;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 100rpx;
  padding: 0 40rpx;
  flex-shrink: 0;
}

.icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 滚动容器 */
.goals-scroll {
  height: 60vh;
}

/* 目标网格 */
.goals-grid {
  padding: 0 40rpx 40rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goal-item {
  background: #fff;
  border: 3rpx solid #e0e0e0;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  width: calc(50% - 10rpx);
  margin-bottom: 20rpx;
  transition: all 0.3s;
  box-sizing: border-box;
}

.goal-item.selected {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  border-color: #ff9dcd;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.4);
}

.goal-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
}

.goal-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

.goal-item.selected .goal-text {
  color: #fff;
}

/* 底部按钮 */
.footer {
  flex-shrink: 0;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  width: 100%;
}

.confirm-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 30rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.3);
}

.confirm-btn.disabled {
  background: #ccc;
  color: #999;
}
