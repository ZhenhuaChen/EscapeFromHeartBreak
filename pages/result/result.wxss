/* pages/result/result.wxss */
page {
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 计算中视图 */
.calculating-view {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  opacity: 1;
  transition: opacity 0.5s;
}

.calculating-view.hide {
  opacity: 0;
  pointer-events: none;
}

/* 高端Loading动画 */
.loading-animation {
  width: 400rpx;
  height: 400rpx;
  position: relative;
  margin-bottom: 80rpx;
}

/* 中心核心 */
.core-circle {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 120rpx;
  height: 120rpx;
  margin-left: -60rpx;
  margin-top: -60rpx;
  background: linear-gradient(135deg, #ff9dcd 0%, #81d4fa 100%);
  border-radius: 50%;
  animation: coreGlow 2s ease-in-out infinite;
  box-shadow: 0 0 40rpx rgba(255, 157, 205, 0.8);
  z-index: 10;
}

.core-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffa8d8 0%, #4fc3f7 100%);
  animation: innerPulse 1.5s ease-in-out infinite;
}

@keyframes coreGlow {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 40rpx rgba(255, 157, 205, 0.8);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 0 60rpx rgba(129, 212, 250, 1);
  }
}

@keyframes innerPulse {
  0%, 100% {
    transform: scale(0.9);
    opacity: 0.8;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 波纹层 */
.ripple-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.ripple {
  position: absolute;
  left: 50%;
  top: 50%;
  border: 3rpx solid;
  border-radius: 50%;
  animation: rippleExpand 3s ease-out infinite;
}

.ripple-1 {
  width: 160rpx;
  height: 160rpx;
  margin-left: -80rpx;
  margin-top: -80rpx;
  border-color: rgba(255, 157, 205, 0.6);
  animation-delay: 0s;
}

.ripple-2 {
  width: 240rpx;
  height: 240rpx;
  margin-left: -120rpx;
  margin-top: -120rpx;
  border-color: rgba(129, 212, 250, 0.6);
  animation-delay: 1s;
}

.ripple-3 {
  width: 320rpx;
  height: 320rpx;
  margin-left: -160rpx;
  margin-top: -160rpx;
  border-color: rgba(255, 157, 205, 0.4);
  animation-delay: 2s;
}

@keyframes rippleExpand {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

/* 粒子层 */
.particles-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.particle {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #ff9dcd, #81d4fa);
  border-radius: 50%;
  animation: particleFloat 3s ease-in-out infinite;
  animation-delay: calc(var(--i) * 0.15s);
  transform-origin: center;
}

@keyframes particleFloat {
  0% {
    transform: translate(0, 0) scale(0);
    opacity: 0;
  }
  20% {
    opacity: 1;
  }
  100% {
    transform: translate(
      calc(cos(var(--i) * 30deg) * 180rpx),
      calc(sin(var(--i) * 30deg) * 180rpx)
    ) scale(1.5);
    opacity: 0;
  }
}

.calculating-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff9dcd;
  margin-bottom: 20rpx;
  animation: textShine 2s ease-in-out infinite;
}

@keyframes textShine {
  0%, 100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}

.calculating-subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 80rpx;
}

/* 分析项目 */
.analysis-items {
  width: 100%;
  max-width: 600rpx;
}

.analysis-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  opacity: 0.3;
  transition: all 0.4s;
  transform: translateX(-20rpx);
}

.analysis-item.active {
  opacity: 1;
  transform: translateX(0);
  box-shadow: 0 4rpx 20rpx rgba(255, 157, 205, 0.2);
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  transition: all 0.3s;
}

.analysis-item.active .check-icon {
  background: linear-gradient(135deg, #ff9dcd 0%, #81d4fa 100%);
  border-color: #ff9dcd;
  animation: checkPop 0.4s ease;
}

@keyframes checkPop {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.analysis-text {
  color: #333;
  font-size: 28rpx;
}

/* 结果视图 */
.result-view {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  padding-top: calc(60rpx + constant(safe-area-inset-top));
  padding-top: calc(60rpx + env(safe-area-inset-top));
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  transform: scale(0.9);
  transition: all 0.5s ease;
  pointer-events: none;
}

.result-view.show {
  opacity: 1;
  transform: scale(1);
  pointer-events: auto;
}

.result-icon {
  font-size: 100rpx;
  margin-bottom: 40rpx;
  animation: bounce 0.6s ease;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.result-card {
  background: linear-gradient(135deg, rgba(255, 157, 205, 0.1) 0%, rgba(129, 212, 250, 0.1) 100%);
  border: 2rpx solid rgba(255, 157, 205, 0.3);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 60rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 157, 205, 0.2);
}

.days-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.days-number {
  font-size: 120rpx;
  font-weight: bold;
  color: #ff9dcd;
  line-height: 1;
}

.days-unit {
  font-size: 48rpx;
  color: #ff9dcd;
  margin-left: 10rpx;
}

.result-desc {
  font-size: 32rpx;
  color: #666;
}

/* 提示项目 */
.result-tips {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
}

.start-btn {
  width: 100%;
  max-width: 600rpx;
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 32rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.4);
}
