/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #8B1538 0%, #5A0F29 100%);
  position: relative;
  overflow: hidden;
}

/* 计算中视图 */
.calculating-view {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  opacity: 1;
  transition: opacity 0.5s;
}

.calculating-view.hide {
  opacity: 0;
  pointer-events: none;
}

/* 爱心loading */
.loading-hearts {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-bottom: 60rpx;
}

.heart {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -20rpx;
  margin-top: -20rpx;
  animation: heartBeat 1.2s ease-in-out infinite;
}

@keyframes heartBeat {
  0%, 100% {
    transform: scale(0.8) translateY(0);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.2) translateY(-20rpx);
    opacity: 1;
  }
}

.calculating-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.calculating-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 80rpx;
}

/* 分析项目 */
.analysis-items {
  width: 100%;
  max-width: 600rpx;
}

.analysis-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  opacity: 0.4;
  transition: all 0.3s;
}

.analysis-item.active {
  background: rgba(255, 255, 255, 0.2);
  opacity: 1;
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

.analysis-item.active .check-icon {
  background: #fff;
  border-color: #fff;
  color: #8B1538;
}

.analysis-text {
  color: #fff;
  font-size: 28rpx;
}

/* 结果视图 */
.result-view {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  padding-top: calc(60rpx + constant(safe-area-inset-top));
  padding-top: calc(60rpx + env(safe-area-inset-top));
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  transform: scale(0.9);
  transition: all 0.5s ease;
  pointer-events: none;
}

.result-view.show {
  opacity: 1;
  transform: scale(1);
  pointer-events: auto;
}

.result-icon {
  font-size: 100rpx;
  margin-bottom: 40rpx;
  animation: bounce 0.6s ease;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 60rpx;
}

.result-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 60rpx;
  width: 100%;
  max-width: 600rpx;
}

.days-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.days-number {
  font-size: 120rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
}

.days-unit {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-left: 10rpx;
}

.result-desc {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 提示项目 */
.result-tips {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.start-btn {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  color: #8B1538;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 32rpx;
  border: none;
}
