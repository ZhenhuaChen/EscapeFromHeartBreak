<!--profile.wxml-->
<navigation-bar title="我的" background="linear-gradient(90deg, #ffc0e0 0%, #ffe5f0 100%)" color="#333" back="{{false}}"></navigation-bar>

<view class="container">
  <view class="menu-list">
    <view class="menu-item" bindtap="goToEmergency">
      <view class="menu-left">
        <text class="menu-icon">💊</text>
        <text class="menu-text">情绪急救包</text>
      </view>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="viewEmotionRecords">
      <view class="menu-left">
        <text class="menu-icon">📝</text>
        <text class="menu-text">情绪记录</text>
      </view>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="resetData">
      <view class="menu-left">
        <text class="menu-icon">🔄</text>
        <text class="menu-text">重新开始</text>
      </view>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="showAbout">
      <view class="menu-left">
        <text class="menu-icon">ℹ️</text>
        <text class="menu-text">关于</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="disclaimer">
    本工具不替代专业心理咨询
    <text class="hotline" bindtap="showHotline">心理热线></text>
  </view>
</view>
