/* pages/tasks/tasks.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  padding: 40rpx;
  padding-bottom: calc(40rpx + 100rpx);
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #999;
}

/* 今日任务卡片 */
.daily-task-card {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.3);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.task-day {
  font-size: 28rpx;
  opacity: 0.9;
}

.task-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.task-status.completed {
  background: rgba(255, 255, 255, 0.3);
}

.task-content {
  margin-bottom: 30rpx;
}

.task-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.task-desc {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

.complete-btn {
  background: #fff;
  color: #ff9dcd;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 24rpx;
  border: none;
}

.completed-time {
  text-align: center;
  font-size: 26rpx;
  opacity: 0.8;
  padding: 20rpx;
}

/* 所有任务列表 */
.all-tasks-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-item.completed {
  opacity: 0.6;
}

.task-info {
  flex: 1;
}

.task-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.task-description {
  font-size: 24rpx;
  color: #999;
}

.task-check {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.task-item.completed .task-check {
  background: #81d4fa;
  border-color: #81d4fa;
}

.check-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}
