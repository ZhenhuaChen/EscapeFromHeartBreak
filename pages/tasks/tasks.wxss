/* pages/tasks/tasks.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  padding: 40rpx;
  padding-bottom: calc(40rpx + 100rpx);
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #999;
}

/* 今日任务卡片 */
.daily-task-card {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.3);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.task-day {
  font-size: 28rpx;
  opacity: 0.9;
}

.task-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

.task-status.completed {
  background: rgba(255, 255, 255, 0.3);
}

.task-content {
  margin-bottom: 30rpx;
}

.task-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.task-desc {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

.task-hint {
  text-align: center;
  font-size: 24rpx;
  opacity: 0.8;
  padding: 20rpx 0 10rpx 0;
  margin-top: 10rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.completed-time {
  text-align: center;
  font-size: 26rpx;
  opacity: 0.8;
  padding: 10rpx 0 0 0;
  margin-top: 10rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 所有任务列表 */
.all-tasks-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-item.completed {
  opacity: 0.6;
}

.task-info {
  flex: 1;
}

.task-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.task-description {
  font-size: 24rpx;
  color: #999;
}

.task-check {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.task-item.completed .task-check {
  background: #81d4fa;
  border-color: #81d4fa;
}

.check-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.check-icon.pending {
  color: #ddd;
  font-size: 28rpx;
}

/* 当天任务高亮 */
.task-item.current {
  border: 2rpx solid #ff9dcd;
  box-shadow: 0 4rpx 12rpx rgba(255, 157, 205, 0.2);
}

/* 鼓励弹窗 */
.encouragement-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.encouragement-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin: 0 60rpx;
  text-align: center;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.encouragement-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.encouragement-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.encouragement-message {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.encouragement-btn {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.3);
}
