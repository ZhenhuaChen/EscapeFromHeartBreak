/* pages/home/home.wxss */
.container {
  height: 100vh;
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  padding: 40rpx;
  padding-bottom: calc(40rpx + 100rpx);
  overflow: scroll;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 157, 205, 0.3);
}

.greeting {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.recovery-plan {
  font-size: 28rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.plan-text {
  font-weight: bold;
  font-size: 32rpx;
}

.days-info {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.days-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.days-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.days-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 进度条 */
.progress-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.progress-percent {
  font-size: 28rpx;
  color: #ff9dcd;
  font-weight: bold;
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background-color: #ff9dcd;
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-tip {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 任务列表 */
.tasks-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 无任务提示 */
.no-tasks {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.no-tasks-icon {
  font-size: 80rpx;
  margin-bottom: 10rpx;
}

.no-tasks-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.no-tasks-tip {
  font-size: 26rpx;
  color: #999;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.task-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.task-item.locked {
  opacity: 0.5;
}

.task-item.completed {
  background: #f0f9ff;
}

.task-left {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.task-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.task-checkbox.checked {
  background: #81d4fa;
  border-color: #81d4fa;
}

.check-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.lock-icon {
  font-size: 24rpx;
}

.task-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

.task-date {
  font-size: 24rpx;
  color: #81d4fa;
  margin-top: 10rpx;
}

.task-day {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  border: none;
  font-size: 28rpx;
}

.emergency-btn {
  background: linear-gradient(135deg, #ff9dcd 0%, #ffa8d8 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255, 157, 205, 0.3);
}

.emotion-btn {
  background: linear-gradient(135deg, #81d4fa 0%, #4fc3f7 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(129, 212, 250, 0.3);
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 26rpx;
}
