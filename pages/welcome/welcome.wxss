/* pages/welcome/welcome.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9dcd 0%, #81d4fa 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.content {
  width: 100%;
  text-align: center;
  color: #fff;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  opacity: 0.9;
  margin-bottom: 100rpx;
}

.feature-list {
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 32rpx;
}

.slogan {
  font-size: 36rpx;
  line-height: 1.6;
  margin-bottom: 100rpx;
}

.highlight {
  display: block;
  font-weight: bold;
  font-size: 40rpx;
  margin-top: 10rpx;
}

.start-btn {
  background: #fff;
  color: #ff9dcd;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 255, 255, 0.3);
}

.disclaimer {
  font-size: 24rpx;
  opacity: 0.7;
}
