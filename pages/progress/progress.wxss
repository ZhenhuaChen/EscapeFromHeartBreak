/* pages/progress/progress.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #ffeef8 0%, #e0f7ff 100%);
  padding: 40rpx;
  padding-bottom: calc(40rpx + 100rpx);
  padding-top: calc(40rpx + env(safe-area-inset-top) + 44px);
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 56rpx;
  font-weight: bold;
  color: #ff9dcd;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 进度条 */
.progress-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.progress-bar {
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background-color: #ff9dcd;
  border-radius: 10rpx;
  transition: width 0.3s;
}

.progress-text {
  text-align: center;
  font-size: 28rpx;
  color: #ff9dcd;
  font-weight: bold;
}

/* 日历 */
.calendar-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

.calendar-day {
  aspect-ratio: 1;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.calendar-day.completed {
  background: linear-gradient(135deg, #81d4fa 0%, #4fc3f7 100%);
}

.calendar-day.today {
  border: 3rpx solid #ff9dcd;
}

.day-number {
  font-size: 24rpx;
  color: #999;
}

.calendar-day.completed .day-number {
  color: #fff;
  font-weight: bold;
}
